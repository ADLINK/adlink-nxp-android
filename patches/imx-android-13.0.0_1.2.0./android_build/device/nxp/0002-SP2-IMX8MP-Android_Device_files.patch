+PRODUCT_FULL_TREBLE_OVERRIDE := true
+
+# -------@block_power-------
+PRODUCT_SOONG_NAMESPACES += vendor/nxp-opensource/imx/power
+PRODUCT_SOONG_NAMESPACES += hardware/google/pixel
+
