+ifeq ($(POWERSAVE),true)
+    DEVICE_MANIFEST_FILE := $(IMX_DEVICE_PATH)/manifest_powersave.xml
+else
+    DEVICE_MANIFEST_FILE := $(IMX_DEVICE_PATH)/manifest.xml
